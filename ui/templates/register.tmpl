{{/* extends "auth-base" */}}

{{/* Context should be of type ui.AuthPageData */}}

{{ block "content" . }}
  <h1 
    class="text-large my-large text-center"
  >
    Signup
  </h1>

  {{ if .Error }}
    <p class="text-red-900">
      {{ .Error }}
    </p>
  {{ end }}

  <form 
    action="/register"
    method="POST"
    class="flex flex-col gap-base w-fit mx-auto"
  >
    <input 
      type="email" 
      name="email"
      placeholder="Enter email..." 
      required
    >

    <input 
      type="password" 
      name="password"
      placeholder="Enter password..." 
      required
    >

    <input 
      type="password" 
      name="confirm-password"
      placeholder="Enter password again..." 
      required
    >

    <button>
      Submit
    </button>
  </form>
{{ end }}
