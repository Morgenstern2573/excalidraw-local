{{/* Context should be of type ui.DrawingListData */}}

{{ range .DrawingList }}
  <div
    class="flex justify-between items-center"
    id="drawing-list-{{ .ID }}"
  >
    <a
      hx-get="/app?drawing={{.ID}}"
      hx-target="body"
      class="underline cursor-pointer w-fit capitalize"
    >
      {{ .Name }}
    </a>

    {{ if (index $.PresenceMap .ID) }}
      {{ range (index $.PresenceMap .ID) }}
          <div 
            class="rounded-full w-5 h-5 flex flex-center 
            text-vSmall border border-black"
            title="{{ .Name }}"
          >
            {{ .Initials }}
          </div>
      {{end}}
    {{ end }}

    <button
     hx-delete="/app?drawing-ID={{ .ID }}"
     hx-target="#drawing-list-{{ .ID }}"
     hx-confirm="Are you sure you want to delete drawing {{ .Name }}"
     class="w-6 h-6 flex justify-center items-center"
    >
      x
    </button>
  </div>
{{ else }}
  <p>Please add a drawing</p>
{{ end }}