<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Excalidraw:Local</title>

  <link rel="stylesheet" href="/public/css/styles.css">

  <script src="https://unpkg.com/react@18.2.0/umd/react.development.js"></script>
  <script src="https://unpkg.com/react-dom@18.2.0/umd/react-dom.development.js"></script>


  <script
  type="text/javascript"
  src="https://unpkg.com/@excalidraw/excalidraw/dist/excalidraw.production.min.js"
></script>
<script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

</head>
{{/* Context is of type ui.IndexPageData */}}
<body 
  class="container mx-auto grid lg:grid-cols-[1fr_5fr]"
>
  <section class="sidebar">
    <button>
      New collection
    </button>

    <form class="hidden">
      <input type="text" name="" id="" placeholder="Collection Name">
      <button>Save</button>
      <button>Cancel</button>
    </form>
    
    <div class="flex">
      <select name="" id="">
        {{ range .Collections }}
          <option value="{{.ID}}">{{ .Name }}</option>
        {{ end }}
      </select>
    
      <button>
        +
      </button>
    </div>
    
    <form class="flex flex-wrap" action="/new-scene" method="POST">
      <input 
        type="text" 
        class="invisible h-0 block" 
        name="collection-ID" 
        value={{ .ActiveCollection.ID }}
      >

      <input 
        type="text"
        class="w-full" 
        name="scene-name" 
        placeholder="Scene Name"
        required
      >

      <button>Save</button>
      <button type="button">Cancel</button>
    </form>

    <div>
      {{ range .SceneList }}
        <a href="/?scene={{.ID}}">{{ .Name }}</a>
      {{ else }}
        <p>Please add a scene</p>
      {{ end }}
    </div>
  </section>
  <main>
    {{ if .ActiveScene.ID }}
      <p class="invisible h-0" id="scene-id"> {{.ActiveScene.ID}} </p>
      <h2>{{ .ActiveScene.Name }}</h2>
      <div id="app"></div>
    
    {{ else }}
      <p>Select a scene to start drawing</p>
    {{ end }}
  </main>

{{ if .ActiveScene.ID }}
  <script type="text/babel" src="public/excalidraw/index.js"></script>
{{ end }}
</body>
</html>