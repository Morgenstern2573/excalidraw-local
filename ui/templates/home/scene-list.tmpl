{{/* Context should be of type []services.Scene */}}

{{ range . }}
  <div
    class="flex justify-between items-center"
    id="scene-list-{{ .ID }}"
  >
    <a
      hx-get="/?scene={{.ID}}"
      hx-target="body"
      class="underline cursor-pointer w-fit capitalize"
    >
      {{ .Name }}
    </a>

    <button
     hx-delete="/?scene-ID={{ .ID }}"
     hx-target="#scene-list-{{ .ID }}"
     hx-confirm="Are you sure you want to delete scene {{ .Name }}"
     class="w-6 h-6 flex justify-center items-center"
    >
      x
    </button>
  </div>
{{ else }}
  <p>Please add a scene</p>
{{ end }}