{{/* Context should be ui.CollectionsData */}}

<select 
  name="select-collection" 
  id="select-collection"
  hx-get="/app"
  hx-target="body"
  class="rounded p-small"
>
  {{ range .CollectionsList }}
    <option 
      value="{{.ID}}"
      {{ if eq .ID $.ActiveCollection.ID }}
        selected
      {{ end }}
      id="collection-opt={{.ID}}"
    >
      {{ .Name }}
    </option>
  {{ end }}
</select>